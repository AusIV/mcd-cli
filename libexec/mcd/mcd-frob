#!/usr/bin/env bash
### mcd-frob -- CDP management
### Usage: mcd frob --ilk=<id> -- [-]<dink> [-]<dart>
set -e
[ ! -z "$MCD_ILK" ] &&
[ $# = 2 ] || mcd --fail "$0: Missing arguments"

echo "Updating Urn..."
echo "dink: $1"
echo "dart: $2"

dink=$(mcd --to-hex $(seth --to-wei "$1 eth"))
dart=$(mcd --to-hex $(seth --to-wei "$2 eth"))

(set -x; seth send "${MCD_PIT}" "frob(bytes32,int,int)" "$MCD_ILK" "$dink" "$dart")
