#!/usr/bin/env bash
### McDai - game tokens
###
### Usage: mcd [<options>] <command> [<args>]
###    or: mcd help [<command>]

OPTS="mcd [<options>] <command> [<args>]
mcd [<command>] --help
--
  Connection Options:
rpc-url=url          JSON-RPC URL (default: mainnet.infura.io)
  Transaction Options:
F,from=address       account to send from
G,gas=number         number of gas units to provide
  Config Options:
C,config=            chain config - mainnet (default), kovan, or a setup file path
  Dai options:
ilk=address          ilk address
guy=address          guy address
"

set -e

if ! [[ $SETH_INIT ]]; then
  export SETH_INIT=1
  [[ -e ~/.sethrc ]] && . ~/.sethrc
fi

if [[ $2 = --help ]]; then
  exec "${0##*/}" help -- "$1"
elif [[ $1 = -* ]] && command -v "${0##*/}-$1" &>/dev/null; then
  exec "${0##*/}-$1" "${@:2}"
fi

eval "$(git rev-parse --parseopt -- "$@" <<<"$OPTS" || echo exit $?)"

while [[ $1 ]]; do
  case $1 in
    --)           shift; break;;

    -C|--config)  shift; export MCD_CONF=$1;;

    --ilk)        shift; export MCD_ILK=$1;;
    --guy)        shift; export MCD_GUY=$1;;

    -F|--from)    shift; export ETH_FROM=$1;;
    -G|--gas)     shift; export ETH_GAS=$1;;

    *) printf "${0##*/}: unrecognised option: %q\n" "--$1"; exit 1
  esac; shift
done

if [ ! -z $MCD_CONF ]; then
  case "$MCD_CONF" in
    kovan)
      . ${0%/*}/../../kovan.conf
    ;;
    mainnet)
      . ${0%/*}/../../mainnet.conf
    ;;
    *)
      . $MCD_CONF
    ;;
  esac
else
  . ${0%/*}/../../mainnet.conf
fi

export ETH_RPC_URL=${ETH_RPC_URL:-https://mainnet.infura.io}

"${0##*/}-${1-help}" "${@:2}"
